{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", //  jsx was set to preserve (next.js implements its own optimized jsx transform)
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    //
    "noImplicitAny": true,
    // "allowSyntheticDefaultImports": true // so why my works ... 

  },
  "include": [
    // ;not_needed; "src",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "Global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  //
  "declarationMap": true
}